// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

// Prisma Accelerate for faster queries and caching
// Try Prisma Accelerate: https://pris.ly/cli/accelerate-init

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Data untuk proyek yang sudah dibuat
model Project {
  id          String   @id @default(cuid())
  title       String
  description String
  imageUrl    String?  // URL gambar thumbnail
  techStack   String   // Daftar teknologi dalam format JSON string
  liveUrl     String?  // URL ke demo live
  githubUrl   String?  // URL ke repository GitHub
  featured    Boolean  @default(false) // Untuk menampilkan di halaman utama
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Data untuk skill/kemampuan
model Skill {
  id       String @id @default(cuid())
  name     String
  category String // Kategori: "Frontend", "Backend", "Database", "Tools"
  icon     String? // Nama ikon (cth: "SiReact", "SiNodedotjs" dari react-icons)
  level    Int?    // Level skill (1-5)
}

// Data untuk alur sekolah/pendidikan
model Education {
  id          String   @id @default(cuid())
  institution String   // Nama sekolah/universitas
  degree      String   // Gelar atau jurusan (cth: "S1 Teknik Informatika")
  startDate   String   // cth: "2018"
  endDate     String   // cth: "2022" atau "Sekarang"
  description String?  // Deskripsi tambahan
}

// Riwayat Pekerjaan
model Experience {
  id          String   @id @default(cuid())
  company     String
  role        String   // Posisi (cth: "Frontend Developer Intern")
  description String
  startDate   String   // cth: "Jan 2023"
  endDate     String   // cth: "Mar 2023" atau "Sekarang"
}

// Data personal untuk halaman About
model Profile {
  id          String   @id @default(cuid())
  fullName    String
  title       String   // cth: "Fullstack Developer"
  bio         String
  profileImage String? // URL foto profil
  email       String
  phone       String?
  location    String?
  githubUrl   String?
  linkedinUrl String?
  instagramUrl String?
  updatedAt   DateTime @updatedAt
}

// Pesan dari formulir kontak
model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String?
  message   String
  createdAt DateTime @default(now())
}

// Admin user untuk mengelola konten
model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // Hashed password
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}