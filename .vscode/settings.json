{
  // === ‚öôÔ∏è BASIC UI & EDITOR ===
  "code-runner.runInTerminal": true,
  "window.zoomLevel": -1,
  "workbench.editor.enablePreview": false,
  "workbench.editor.empty.hint": "hidden",
  "workbench.startupEditor": "none",

  // Navigasi & tampilan
  "editor.minimap.enabled": true,
  "editor.stickyScroll.enabled": true,
  "breadcrumbs.enabled": true,
  "editor.smoothScrolling": true,
  "workbench.list.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",

  // Indent & wrap
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 120,
  "editor.rulers": [100, 120],

  // Format & autosave
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.fontWeight": "normal",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "files.autoSave": "afterDelay",

  // === üß† DART & FLUTTER (UMUM) ===
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [80],
    "editor.selectionHighlight": false,
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": "off"
  },
  "dart.debugExternalPackageLibraries": false,
  "dart.debugSdkLibraries": false,
  "dart.previewFlutterUiGuidesCustomTracking": true,
  "dart.previewFlutterUiGuides": true,

  // === üåê EMMET / HTML-LIKE ===
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },

  // === üß¨ GIT & GITHUB ===
  "git.enableSmartCommit": true,
  "githubPullRequests.remotes": ["origin", "upstream"],
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "always",
  "git.pruneOnFetch": true,
  "diffEditor.ignoreTrimWhitespace": true,

  // === üß∞ CODE ACTIONS ===
  "editor.codeActionsOnSave": {
    "source.fixAll": "always",
    "source.organizeImports": "always"
  },

  // === üß± BLADE & YAML / DOCKER ===
  "[blade]": {
    "editor.defaultFormatter": "shufo.vscode-blade-formatter"
  },
  "[dockercompose]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },

  // === üì¶ CODE RUNNER (UMUM) ===
  "code-runner.executorMap": {
    "c": "gcc $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "cpp": "g++ $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "java": "javac $fileName && java $fileNameWithoutExt",
    "typescript": "ts-node",
    "bash": "bash",
    "powershell": "powershell -ExecutionPolicy ByPass -File",
    "bat": "cmd /c",
    "go": "go run",
    "javascript": "node",
    "python": "python -u",
    "php": "php"
  },
  "code-runner.ignoreSelection": true,
  "code-runner.clearPreviousOutput": true,

  // === üåç FILE & SEARCH EXCLUDE (UMUM) ===
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/vendor": true,
    "**/.next": true,
    "**/.turbo": true,
    "**/.idea": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/vendor": true,
    "**/.next": true,
    "**/build": true,
    "**/dist": true
  },

  // === üî† FILE ASSOCIATIONS (UMUM) ===
  "files.associations": {
    "*.blade.php": "blade",
    "*.html": "html",
    "*.css": "css"
  },

  // === üêò PHP / LARAVEL (UMUM) ===
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client",
    "editor.formatOnSave": true
  },

  // === üéØ FORMATTER PER BAHASA (PAKAI PRETTIER) ===
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // === üß† GITHUB COPILOT SMART SETTINGS (UMUM) ===
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "github.copilot.inlineSuggest.enable": true,
  "github.copilot.suggestionDelay": 0,
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.advanced": {
    "autocompletion": {
      "context": "full"
    },
    "chat": {
      "context": "workspace"
    },
    "debug.overrideProxy": false
  },

  // === üß† GITLENS + COPILOT (UMUM) ===
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4.1",

  // === üåê LIVE SERVER (UMUM) ===
  "liveServer.settings.donotVerifyTags": true,

  // === üíª TERMINAL UMUM ===
  "terminal.integrated.confirmOnKill": "never",
  "terminal.integrated.defaultProfile.windows": "Windows PowerShell",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.cursorBlinking": true,

  // === ü§ñ TERMINAL AUTO-CONFIRM (NONAKTIFKAN SEMUA KONFIRMASI) ===
  "chat.tools.terminal.confirmExecution": false,
  "github.copilot.chat.terminal.confirmExecution": false,

  // === ü§ñ COPILOT CHAT + TERMINAL (UMUM) ===
  "github.copilot.chat.terminal.autoExecution": "always",

  // === üß© MCP / CHATGPT SETTING UMUM ===
  "mcpServers": {},
  "chatgpt.runCodexInWindowsSubsystemForLinux": true,

  // === üé® THEME & ICON (UMUM, BISA KAMU GANTI KAPAN AJA) ===
  "workbench.iconTheme": "vs-seti",
  "workbench.colorTheme": "Default Dark Modern",

  // ===================================================================
  // =======================  üí† TAMBAHAN UMUM üí†  ======================
  // ===================================================================

  // === üü¶ BRACKET & HIGHLIGHT ===
  "editor.guides.bracketPairs": "active",
  "editor.bracketPairColorization.enabled": true,
  "editor.renderLineHighlight": "all",

  // === üîç PEEK & DEFINITION ===
  "editor.peekWidgetDefaultFocus": "editor",
  "editor.definitionLinkOpensInPeek": true,

  // === üí° INLINE SUGGEST (VS CODE) ===
  "editor.inlineSuggest.enabled": true,

  // === üìÇ EXPLORER QUALITY OF LIFE ===
  "explorer.compactFolders": false,

  // === üóÇ BATAS TAB BIAR NGGAK NUMPUK ===
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 20,
  "workbench.editor.limit.perEditorGroup": 20,

  // === üñ• TERMINAL QUALITY OF LIFE ===
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.defaultLocation": "view",

  // === üïí LOCAL HISTORY (JAGA-JAGA) ===
  "workbench.localHistory.enabled": true,
  "workbench.localHistory.maxFileEntries": 50,
  "workbench.localHistory.exclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/build/**": true
  },

  // === üõü GIT SAFETY ===
  "git.confirmForcePush": true,
  "git.allowForcePush": "smart",

  // === üîí PRIVASI & SECURITY UMUM ===
  "telemetry.telemetryLevel": "off",
  "security.workspace.trustEnabled": true,

  // === üß© EXTRA EDITOR QUALITY-OF-LIFE ===
  "editor.renderWhitespace": "selection",
  "editor.linkedEditing": true,

  // === ‚ö° AUTO SAVE DELAY (SEDIKIT LEBIH CEPAT) ===
  "files.autoSaveDelay": 700
}
